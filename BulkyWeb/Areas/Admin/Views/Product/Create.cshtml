@model Product

<div class="container">
    <div class="row">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create Product</h2>
                    <hr />
                </div>
                @* <div asp-validation-summary="All"></div> *@
                <div class="mb-3">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter product title here" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter product description here"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="ISBN"></label>
                    <input asp-for="ISBN" class="form-control" placeholder="Enter product ISBN here" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control" placeholder="Enter product author here" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ListPrice"></label>
                    <input asp-for="ListPrice" class="form-control" min="1" max="1000" placeholder="Enter product list price here" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" min="1" max="1000" placeholder="Enter product price for < 50" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price50"></label>
                    <input asp-for="Price50" class="form-control" min="1" max="1000" placeholder="Enter product price for 50+" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price100"></label>
                    <input asp-for="Price100" class="form-control" min="1" max="1000" placeholder="Enter product price for 100+" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control" style="border-width: 2px;">Create <i class="bi bi-plus-circle"></i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}